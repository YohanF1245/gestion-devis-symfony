{% extends 'base.html.twig' %}

{% block title %}Dépense{% endblock %}

{% block body %}
{{include('navbar.html.twig')}}
<div class="col-4 offset-4">
    <h1 class="text-pd-yellow text-center">Dépense</h1>

    <table class="table">
        <tbody>
            <tr>
                <th class="table-dark p-3">Nom</th>
                <td class="p-3">{{ outcome.name }}</td>
            </tr>
            <tr>
                <th class="table-dark p-3">Montant de la dépense</th>
                <td class="p-3">{{ outcome.outcomeAmount }}</td>
            </tr>
            <tr>
                <th class="table-dark p-3">Date de la dépense</th>
                <td class="p-3">{{ outcome.outcomeDate ? outcome.outcomeDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="d-flex justify-content-center gap-2">
    <a class="btn btn-primary" href="{{ path('app_outcome_index') }}">Retour</a>

    <a class="btn btn-success" href="{{ path('app_outcome_edit', {'id': outcome.id}) }}">Editer</a>

    {{ include('outcome/_delete_form.html.twig') }}
</div>
{% endblock %}
