{% extends 'base.html.twig' %}

{% block title %}Editer une facture
{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block body %}
{{include('navbar.html.twig')}}
	<div class="container col-8 offset-2 text-white">
		<h1 class="text-center text-pd-yellow mt-3">Editer une facture</h1>
		{{form_start(form)}}
		<div class="row">
			<div class="col-9">
				{{ include('facture_emit/select.estimate.html.twig')}}

			</div>
			<div class="col-3">
				{{form_row(form.creation_date)}}
			</div>
		</div>
		<div class="row">
			<div class="col-4">
				{{form_row(form.payment_date)}}
			</div>
			<div class="col-4">
				{{form_row(form.majoration)}}
			</div>
			<div class="col-4">
				{{form_row(form.date_limit)}}
			</div>
		</div>
		<div class="row">
			{{form_row(form.is_paid)}}
		</div>
		<div class="row">
			<div class="py-3 mt-2 d-grid">
				<button type="submit" class="btn btn-block btn-success ">Editer la facture</button>
			</div>
		</div>
		{{form_end(form)}}
		<div class="d-flex col-8 offset-2 justify-content-around">
			
				<a class="btn btn-primary w-auto" href="{{ path('app_facture_emit_index') }}">Retour a la liste des factures</a>
			
				{{ include('facture_emit/_delete_form.html.twig') }}
            
        </div>
	</div>
{% endblock %}
