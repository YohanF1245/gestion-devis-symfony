{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<div class="container-fluid bg-pd-blue" style="height:10vh!important"></div>

			<div class="col-4 offset-4 mt-5">
				<h1 class="text-center text-pd-yellow">Please sign in</h1>
				<div class="col-12 d-flex mt-3">
					<img class="img-fluid w-25 m-auto" src="{{asset("img/pigeon-devis-portrait.svg")}}">
				</div>
				<div class="mb-3">
					<label class="form-label" for="inputEmail">Email</label>
					<input class="form-control" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				</div>
				<div class="mb-3">
					<label class="form-label" for="inputPassword">Password</label>
					<input class="form-control" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="checkbox mb-3">
					<label>
						<input type="checkbox" name="_remember_me">
						Remember me
					</label>
				</div>
				<div class="d-grid">
					<button class="btn btn-lg btn-primary" type="submit">
						Sign in
					</button>
				</div>
			</div>
			{% if app.user %}
				<div class="mb-3 mt-3 text-center">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}
		</form>
		<div class="container-fluid bg-pd-blue position-fixed bottom-0" style="height:10vh!important">

		{% endblock %}
