{% extends 'base.html.twig' %}

{% block title %}New DressEstimate
{% endblock %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}


{% block body %}
	<div class="container-fluid bg-pd-blue" style="height:10vh!important"></div>
	<h1 class="text-pd-yellow text-center">Nouveau Devis</h1>
	<div class="container col-8 offset-2 p-3" style="padding:30px!important;background-color:white!important;border-radius:25px!imortant;">
		<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-turbo="false">
			<div class="modal-dialog modal-xl">
				<div class="modal-content">
					<div class="modal-body">
						{{ render(controller('App\\Controller\\ClientController::new_modal')) }}
					</div>
					<div class="modal-footer bg-pd-blue m-3" style="height:10vh!important">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
						<button type="button" class="btn btn-primary">Save changes</button>
					</div>
				</div>
			</div>
		</div>
		<!-- Modal -->
		<div class="modal fade" id="newPerformance" tabindex="-1" aria-labelledby="newPerformanceLabel" aria-hidden="true" data-turbo="false">
			<div class="modal-dialog modal-xl">
				<div class="modal-content">
					<div class="modal-body">
						{{ render(controller('App\\Controller\\PerformanceController::new_modal')) }}
					</div>
					<div class="modal-footer bg-pd-blue m-3" style="height:10vh!important">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
						<button type="button" class="btn btn-primary">Save changes</button>
					</div>
				</div>
			</div>
		</div>

		{{form_start(form)}}

		<div
			class="row">
			{# <div class="col-2 offset-1">
						
										<img class="img-thumbnail" src={{asset("/public/uploaded-images/signs/018ec773-589e-74ea-a21d-2b482a7a0278.png")}}>
									</div> #}
			<div class="row">
				<div class="col-4">
					{{form_row(form.estimate_number)}}
				</div>
				<div class="col-4">
					{{form_row(form.creation_date)}}

				</div>
				<div class="col-4">
					{{form_row(form.validity)}}

				</div>
			</div>
			<div class="row ">

				<div class="col-4 d-flex flex-column justify-content-start">
					{{form_row(form.expiration_date)}}

				</div>
				<div class="col-4 d-flex flex-column justify-content-start ">
				<label class="mb-2">Selectionner le client</label>
					{{render(controller('App\\Controller\\DressEstimateController::insertClients'))}}
					{# {% include '/dress_estimate/select.client.html.twig' %} #}
					{# <select class="form-select" id="selectClient" aria-label="Default select example">
																						<option selected>Selectionner le client</option>
																						{% for i in 1..clients|length %}
																							<option value='{{i}}!{{clients[i-1].name}}!{{clients[i-1].lastname}}!{{clients[i-1].businessname}}'>
																								{{clients[i-1].name}}
																								{{clients[i-1].lastname}}
																								{{clients[i-1].businessname}}
																			</option>
																						{% endfor %}
																					</select> #}


						<button type="button" class="btn btn-primary mt-3 mb-3" data-bs-toggle="modal" data-bs-target="#exampleModal"> Ajouter un nouveau client
					</button>
				</div>

				<div class="col-4 d-flex flex-column justify-content-start">
					{{form_row(form.intitule)}}
				</div>
			</div>


		</div>
		<div class="row">
			<div class="col-3 offset-9"></div>
		</div>
		<div class="row">
			<div class="col-3 offset-9"></div>
		</div>
		<div class="row">
			<div class="col-3 offset-9"></div>
		</div>
		<div class="row"></div>
		<div class="row"></div>
		<div id="performanceDiv" class="row">
			<input type="hidden" id="prestationTotal" name="prestationTotal" value="0">
			<table class="table table-striped-column">
				<thead class="">
					<tr class="table-dark text-center">
						<th>Quantité</th>
						<th>Désignation</th>
						<th>Unité</th>
						<th>Prix</th>
					</tr>
				</thead>
				<tbody id="perfomanceTableBody"></tbody>
			</table>
		</div>
		<div class="row">
			<div class="col-5">
				<select class="form-select" id="selectPerf" aria-label="Default select example" data-turbo="false">
					<option selected>Ajouter une prestation</option>
					{{render(controller('App\\Controller\\DressEstimateController::insertPerformances'))}}
				{# {% for item in myPerformances() %}
																						<p>item.unit</p>
																					{% endfor %} #}
					{# {% for i in 1..myPerformances()|length %}
																										<option value='{{i}}!{{performances[i-1].quantity}}!{{performances[i-1].unit}}!{{performances[i-1].designation}}!{{performances[i-1].pirce}}'>{{performances[i-1].quantity}}
																											{{performances[i-1].unit}}
																											{{performances[i-1].designation}}
																											{{performances[i-1].pirce}}</option>
																									{% endfor %} #}
				</select>
			</div>

			<div class="col">
				<button type="button" class="btn btn-primary" onclick="addPerformance()">Ajouter
				</button>
				<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newPerformance">
					Créér une nouvelle prestation
				</button>
				<button type="button" class="btn btn-danger" onclick="removeLast()">Retirer le dernier élément</button>
			</div>
		</div>
		<div class="row">
			<div class="col-7">
				{{form_row(form.free_zone)}}
			</div>
			<div class="col-4">
				{{form_row(form.accompte)}}
				{{form_row(form.discount)}}
			</div>
		</div>
		<div class="row">
			<div class="py-3 d-grid">
				<button type="submit" class="btn btn-block btn-success">Créer le devis</button>
			</div>
			{# {{form_row(form.Envoyer)}} #}
		</div>
		{{form_end(form)}}


		<a href="{{ path('app_dress_estimate_index') }}">back to list</a>
	</div>
	<div style="height:15vh!important">
		<div class="container-fluid bg-pd-blue position-fixed bottom-0" style="height:10vh!important">


		{% endblock %}
