{% extends 'base.html.twig' %}

{% block title %}DressEstimate
{% endblock %}

{% block body %}
	<style>
		* {
			margin:0;
		}
			html {
		font-size:10px;
}
		.p-l-1{
			padding-left:1rem;
		}
		.container {
			width:100%;
		}
		.padding-1{
			padding:1rem;
		}
		.padding {
			padding:3rem;
		}
		.right {
			text-align:right;
		}
		.space-top-1{
			margin-top:1rem;
		}
		.w-70 {
			width:70%;
		}
		.w-60 {
			width:60%;
		}
		.w-50 {
			width:50%;
		}
		.w-30 {
			width:30%;
		}
		.w-20{
			width:20%;
		}
		.w-100{
			width:100%;
		}
		.w-tab{
			width:calc(100% / 6);
		}
		.inline-block{
			display:inline-block;
		}
		.h-tot{
			height:1.5rem;
		}
		.m-t-1{
			margin-top:1rem;
		}
		.m-t-2{
			margin-top:2rem;
		}
		.m-t-3{
			margin-top:3rem;
		}
		.m-b-1{
			margin-bottom:1rem;
		}
		.bold-underline{
			font-weight:bold;
			text-decoration:underline;
		}
		.float-right{
			float:right;
		}
		.float-left{
			float:left;
		}
		div{
		}
		.flex{
			display:flex;
		}
		.bg-black{
			background-color:black!important;
		}
		.text-white{
			color:white;
		}
		.border{
			border:1px solid black;
		}
		.border-left{
			border-left: 1px solid black;
		}
		.border-right{
			border-right: 1px solid black;
		}
		.text-center{
			text-align:center;
		}
		.flex-gap-1{
			gap:1rem;
		}
		.flex-gap-2{
			gap:2rem;
		}
		.flex-gap-3{
			gap:3rem;
		}
		.flex-gap-4{
			gap:4rem;
		}
		.clear{
			clear:both;
		}
		.m-l-1{
			margin-left:1rem;
		}
		.m-l-2{
			margin-left:2rem;
		}
		.m-l-3{
			margin-left:3rem;
		}
		.m-3{
			margin:3rem;
		}
		.bottom{
			position:absolute;
			left:0;
			bottom:0;
		}
	</style>
	{# <table class="table"> #}
	<div class="container w-100" style="background-color:white!important;postion:relative;">
		<div class=" w-100 m-t-3">
			<div class="w-50 float-left">

				<img class="img-thumbnail" src="data:image/{{extension}};base64,{{image}}" width="50mm">
			</div>
			<div class="w-50" style="float:right">
				<p class="right">
					Devis N°
					{{dress_estimate.estimateNumber}}
					<br><br>
					Date d'émission :
					{{dress_estimate.creationDate |date('d-m-Y')}}
					<br>Validité :
					{{dress_estimate.estimateNumber}}
					jours</p>
			</div>
		</div>
		<div class="m-t-1 clear">
			<div class="w-30 float-left">
				<p class="bold-underline">
					Emetteur :
				</p>
			</div>
			<div class="w-30 float-right">
				<p class="bold-underline">Destinataire :
				</p>
			</div>
		</div>
		<div class=" clear m-t-1" style="">
			<div class="w-30 border float-left padding-1">
				<div>{{business.businessName}}</div>
				<div>{{user.email}}</div>
			</div>
			<div class="w-30 border float-right padding-1">
				<div>{{client.businessName}}</div>
				<div>{{client.mail}}</div>
				<div>{{client.name}}
					{{client.lastname}}</div>
				<div>{{client.numStreet}}
					{{client.street}}</div>
				<div>{{client.zipPostal}}
					{{client.town}}</div>
			</div>
		</div>
		<div class="m-t-1 clear">
			<p >Intitulé :
				{{dress_estimate.intitule}}</p>
		</div>

		<div id="performanceDiv" >
			<table class="w-100" style="border:1px solid black">
				<thead >
					<tr class="bg-black text-white">
						<th class="w-tab p-l-1">Quantité</th>
						<th class="w-tab">Désignation</th>
						<th class="w-tab">Unité</th>
						<th class="w-tab">Prix</th>
						<th class="w-tab">T.V.A</th>
						<th class="w-tab">Total</th>
					</tr>
				</thead>
				<tbody >
				{% set totalHt = 0 %}
					{% for perf in performances %}
						<tr >
							<td class="p-l-1">{{perf[0].quantity}}</td>
							<td>{{perf[0].designation}}</td>
							<td>{{perf[0].unit}}</td>
							<td>{{perf[0].pirce}} €</td>
							<td>{{perf[0].tax}} %</td>
							{% set pirce = perf[0].pirce|trim %}
							{% set quantity = perf[0].quantity|trim %}
							{% set tax = perf[0].tax %}
							{% set totalHt = totalHt + ((pirce*quantity) * (1+tax/100)) %}
							<td> {{ (pirce*quantity) * (1+tax/100) }} €</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="clear m-t-1">
			<div class="border w-60 float-left " style="min-height:4rem">
				<p>{{dress_estimate.freeZone}}</p>
			</div>
			<div class="w-30 float-right" style="border:1px solid white">
				<div class=" h-tot">
					<div  class="float-left">
						Total:
					</div>
					<div  class="float-right">
						{{totalHt}} €
					</div>
				</div>
				<div class=" h-tot">
					<div class="clear float-left">
						Remise {{dress_estimate.discount}} %:
					</div>
					<div class="float-right">
						{{(totalHt*2/100)}} €
					</div>
				</div>
				{% set discount = dress_estimate.discount %}
				{% set totalTTC = (totalHt-(totalHt*discount/100)) %}
				<div class=" h-tot bg-black text-white" style="">
					<div class="float-left ">
						Total TTC:
					</div>
					<div class="float-right">
						{{totalTTC}} €
					</div>
				</div>
				<div  class=" h-tot">
					<div  class="float-left">
						Accompte {{dress_estimate.accompte}} %:
					</div>
					{% set accompte = dress_estimate.accompte %}
					<div  class="float-right">
						{{(totalTTC*accompte/100)}} €
					</div>
				</div>
			</div>
		</div>
		<div>
			<div>
				<p></p>
				<br><br><br><br>
			</div>

			<div class="clear m-t-3">
			<div class="w-30 float-right">
				<p>Bon pour accord du client :</p>
			</div>
			<div class="w-30 float-left">
				<p>Signature :</p>
				<img src="data:image/{{logoExt}};base64,{{logo}}" width="50%"></img>
			</div>
				<br><br><br><br><br><br>
			</div>
		</div>
		<div class="clear text-center bg-black text-white bottom" style="width:100%;">
			<div class="m-t-1">Siret :
				{{business.siret}}</div>
			<div>Code ape :
				{{business.codeApe}}
				Tva :
				{{business.codeTva}}</div>
			<div class="m-b-1">Rib :
				{{business.rib}}</div>
		</div>
	</div>


	<a style="text-decoration:none;color:white;opacity:0;" href="{{ path('app_dress_estimate_index') }}">back to list</a>

	<a style="text-decoration:none;color:white;opacity:0;" href="{{ path('app_dress_estimate_edit', {'id': dress_estimate.id}) }}">edit</a>

	{{ include('dress_estimate/_delete2_form.html.twig') }}
{% endblock %}
