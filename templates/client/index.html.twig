{% extends 'base.html.twig' %}

{% block title %}Client index
{% endblock %}

{% block body %}
	{% include 'navbar.html.twig' %}

	<div class="col-xxl-6 col-xl-10 offset-xl-1 offset-xxl-3">
		<h1 class="text-center text-pd-yellow my-3">Mes clients</h1>
		<div class="d-flex justify-content-center mb-2">
			<a class="btn btn-primary" href="{{ path('app_client_new') }}">Ajouter un client</a>
		</div>
		<table class="table table-striped-column">
			<thead>
				<tr class="table-dark text-center">
					<th>Prénom</th>
					<th>Nom</th>
					<th>Nom de l'entreprise</th>
					<th>Email</th>
					<th>Index telephonique</th>
					<th>Numéro de téléphone</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for client in clients %}
					<tr style="position:relative!important">
						<td>{{ client.name }}</td>
						<td>{{ client.lastName }}</td>
						<td>{{ client.businessName }}</td>
						<td>{{ client.mail }}</td>
						<td>{{ client.indexTel }}</td>
						<td>{{ client.phoneNumber }}</td>
						<td>
							<div class="d-flex justify-content-around gap-2">
								<a class="btn btn-primary" href="{{ path('app_client_show', {'id': client.id}) }}">Voir</a>
								<a class="btn btn-success" href="{{ path('app_client_edit', {'id': client.id}) }}">Editer</a>
								{{include('client/_delete_form.html.twig')}}
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="13">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
