{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ client.lastName }}</td>
            </tr>
            <tr>
                <th>Business_name</th>
                <td>{{ client.businessName }}</td>
            </tr>
            <tr>
                <th>Is_physick</th>
                <td>{{ client.isPhysick ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ client.mail }}</td>
            </tr>
            <tr>
                <th>Num_street</th>
                <td>{{ client.numStreet }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ client.street }}</td>
            </tr>
            <tr>
                <th>Zip_postal</th>
                <td>{{ client.zipPostal }}</td>
            </tr>
            <tr>
                <th>Index_tel</th>
                <td>{{ client.indexTel }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ client.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Town</th>
                <td>{{ client.town }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_client_index') }}">back to list</a>

    <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
