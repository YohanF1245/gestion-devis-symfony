

{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}
<div class="col-4 offset-4">
    <h1 class="text-pd-yellow text-center">Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Prénom</th>
                <td>{{ client.name }}</td>
            </tr>
                <th>Nom</th>
                <td>{{ client.lastName }}</td>
            <tr>
            </tr>
            <tr>
                <th>Nom de l'entreprise</th>
                <td>{{ client.businessName }}</td>
            </tr>
            <tr>
                <th>Personne physique?</th>
                <td>{{ client.isPhysick ? 'Physique' : 'Morale' }}</td>
            </tr>
            <tr>
                <th>E-Mail</th>
                <td>{{ client.mail }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ client.numStreet }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ client.street }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ client.zipPostal }}</td>
            </tr>
            <tr>
                <th>Index telephonique</th>
                <td>{{ client.indexTel }}</td>
            </tr>
            <tr>
                <th>Numéro de téléphone</th>
                <td>{{ client.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ client.town }}</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="d-flex justify-content-center gap-2">
    <a class="btn btn-primary" href="{{ path('app_client_index') }}">Retour</a>

    <a class="btn btn-success" href="{{ path('app_client_edit', {'id': client.id}) }}">Editer</a>

    {{ include('client/_delete_form.html.twig') }}
</div>
{% endblock %}
